<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">



    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:foregroundGravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   >

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/purchases_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="fitCenter"
                        app:fabCustomSize="140dp"
                        app:fabSize="normal"
                        app:maxImageSize="120dp"
                        app:srcCompat="@drawable/purchases" />

                    <TextView
                        android:layout_width="0dp"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/purchases_btn"
                        android:layout_alignLeft="@+id/purchases_btn"
                        android:layout_alignRight="@+id/purchases_btn"
                        android:layout_marginTop="2dp"
                        android:text="Moje zakupy"
                        android:textAlignment="center" />
                </RelativeLayout>

            </FrameLayout>

            <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

                <RelativeLayout
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:foregroundGravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/categories_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="fitCenter"
                        app:fabCustomSize="140dp"
                        app:fabSize="normal"
                        app:maxImageSize="120dp"
                        app:srcCompat="@drawable/categories" />

                    <TextView
                        android:layout_width="0dp"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/categories_btn"
                        android:layout_alignLeft="@+id/categories_btn"
                        android:layout_alignRight="@+id/categories_btn"
                        android:layout_marginTop="2dp"
                        android:text="Kategorie"
                        android:textAlignment="center" />
                </RelativeLayout>



        </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <RelativeLayout
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:foregroundGravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/setting_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="fitCenter"
                        app:fabCustomSize="140dp"
                        app:fabSize="normal"
                        app:maxImageSize="120dp"
                        app:srcCompat="@drawable/settings" />

                    <TextView
                        android:layout_width="0dp"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/setting_btn"
                        android:layout_alignLeft="@+id/setting_btn"
                        android:layout_alignRight="@+id/setting_btn"
                        android:layout_marginTop="2dp"
                        android:text="Ustawienia"
                        android:textAlignment="center" />
                </RelativeLayout>



            </FrameLayout>

        </LinearLayout>


    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:foregroundGravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/camera_scan_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="fitCenter"
                        app:fabCustomSize="140dp"
                        app:fabSize="normal"

                        app:maxImageSize="120dp"
                        app:srcCompat="@drawable/camera"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:text="Skanuj paragon"
                        android:layout_marginTop="2dp"
                        android:textAlignment="center"
                        android:textSize="20dp"

                        android:layout_below="@+id/camera_scan_btn"
                        android:layout_alignLeft="@+id/camera_scan_btn"
                        android:layout_alignRight="@+id/camera_scan_btn"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>



            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:foregroundGravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/gallery_scan_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="fitCenter"
                        app:fabCustomSize="140dp"
                        app:fabSize="normal"
                        app:maxImageSize="120dp"
                        app:srcCompat="@drawable/gallery" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/gallery_scan_btn"
                        android:layout_alignLeft="@+id/gallery_scan_btn"
                        android:layout_alignRight="@+id/gallery_scan_btn"
                        android:layout_marginTop="2dp"
                        android:textSize="20dp"
                        android:text="Skanuj z galerii"
                        android:textAlignment="center" />
                </RelativeLayout>



            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <RelativeLayout
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:foregroundGravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/product_add_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="fitCenter"
                        app:fabCustomSize="140dp"
                        app:fabSize="normal"
                        app:maxImageSize="120dp"
                        app:srcCompat="@drawable/add" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/product_add_btn"
                        android:layout_alignLeft="@+id/product_add_btn"
                        android:layout_alignRight="@+id/product_add_btn"
                        android:layout_marginTop="2dp"
                        android:text="Dodaj produkt"
                        android:textSize="20dp"
                        android:textAlignment="center" />
                </RelativeLayout>



            </FrameLayout>




        </LinearLayout>


    </FrameLayout>



</LinearLayout>